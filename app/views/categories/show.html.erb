<div class='d-flex flex-column align-items-center mt-4'>
  <div class="card text-center w-50  rounded-1 shadow-lg">
    <div class='card-body d-flex flex-column'>
        <h4 class="card-title text-uppercase"><%= @category.cname %></h4>
      
        <small>Created <%= time_ago_in_words( @category.created_at) %> ago</small>
        <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-info btn-sm w-25 mx-auto my-1" %>
        <%= link_to 'Back', categories_path, class: "text-secondary" %>
    </div>
  </div>
</div>
<%= render 'tasks/tasks' %>
