<div class="container bg-secondary rounded px-4 py-2">
  <div class="form-wrapper">
    <%= form_with(scope: :session, url:sign_in_path, class: "form-group", local: true) do |f| %>

        <%= f.label :email, class: "text-white font-weight-bold" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>

        <%= f.label :password, class: "text-white font-weight-bold" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      <div class='text-center  mt-3'>
        <%= f.submit 'Sign In', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div> 