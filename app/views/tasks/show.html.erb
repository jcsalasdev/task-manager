<div class='d-flex flex-column align-items-center pt-2'>
  <div class="card text-center w-75">

    <div class="card-header">
      <% if @task.user %>
        <%= @task.user.name%>
      <% end %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @task.title %></h5>
      <p class="card-text"><%= @task.description %></p>
      <% if logged_in? && (@task.user == current_user ) %>
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-info" %>
      <%= link_to "Delete", task_path(@task), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <small>Created <%= time_ago_in_words(@task.created_at) %> ago, 
      edited <%= time_ago_in_words(@task.updated_at) %> ago</small>
    </div>
  </div>
  <br>
</div>


